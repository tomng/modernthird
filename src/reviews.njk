---
title: The Best Stuff
layout: toc
---

<section class="mt-15">
    {% set recommendationslist = collections.recommendation %}

    {% for recommendation in recommendationslist | reverse %}
        <article class="my-8 max-w-sm border-4 border-gray-100 border-opacity-10 rounded-3xl shadow-2xl p-8">
            <h2 class="font-bold text-5xl text-gray-800 mt-8">
                <a href="{{ recommendation.url | url }}">
                    {% if recommendation.data.title %}
                        {{ recommendation.data.title }}
                    {% else %}
                        Untitled
                    {% endif %}
                </a>
            </h2>
            <h3 class="font-bold text-indigo-500 text-2xl text-gray-900 leading-tight mt-4 mb-6">
                <a href="{{ recommendation.url | url }}">
                    {% if recommendation.data.subtitle %}
                        {{ recommendation.data.subtitle }}
                    {% endif %}
                </a>
            </h3>
            {% if recommendation.data.description %}
                <p class="text-lg text-gray-500 mb-3">
                    {{ recommendation.data.description }}
                </p>
            {% endif %}

            <p class="mt-8">
                <a href="{{ recommendation.url | url }}" class="text-indigo-500 font-bold text-lg">
                    Read more â†’
                </a>
            </p>

        </article>
    {% endfor %}
</section>