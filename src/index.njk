<div class="container mx-auto mt-8 lg:mt-32 mb-16 flex flex-col justify-center px-6 lg:px-20 max-w-4xl">

  <a href="/reviews">
    <h1>
      <strong class="bg-clip-text text-transparent bg-gradient-to-r from-blue-500 to-purple-500">
        {{title}}
      </strong>
      <br/>
      is a shortlist of great&nbsp;stuff 
      to simplify&nbsp;& live&nbsp;better.
    </h1>
    <h2 class="mt-4 mb-4 leading-snug">
      <span class="bg-yellow-100 px-1">Buy&nbsp;less</span>, enjoy the best, and <span class="bg-yellow-100 px-1">live&nbsp;more</span>.
    </h2>
  </a>

  {# <div class="mt-8 lg:mt-16 mb-8 text-right">
    <a class="bg-gradient-to-r from-blue-500 to-purple-500 rounded-lg text-white text-xl font-semibold px-8 py-4" href="/reviews">
      Buy Less
    </a>
  </div> #}

  {% set recommendationslist = collections.recommendation %}


  <section class="my-8 bg-white mb-1 max-w-lg rounded-3xl shadow-2xl overflow-hidden p-8">
    <h3 class="font-bold text-3xl leading-tight bg-clip-text text-transparent bg-gradient-to-r from-blue-500 to-purple-500 mb-6">
      The Shortlist
    </h3>
    {% for tag in tags %}
      <div class="mb-6">
          <h4 class="inline-block px-3 py-1 rounded-md bg-gray-500 text-white text-sm font-bold mb-1">
            {{ tag.label }}
          </h4>

          <ul class="ml-4">
            {% for post in collections[tag.name] %}
                <li class="text-gray-800 font-semibold leading-none mt-3">
                  <a href="#card-{{post.fileSlug}}" class="transition duration-200 hover:text-gray-400">
                    {{ post.data.subtitle }}
                  </a>
                </li>
            {% endfor %}
          </ul>
      </div>
    {% endfor %}
  </section>
  
  <section class="grid lg:grid-cols-2 gap-8 my-8 lg:my-8">
      {% for recommendation in recommendationslist | reverse %}
        {% include "./_includes/partials/card-sm.njk" %}
      {% endfor %}
  </section>

  {# <div class="place-self-center">
    {% include "./_includes/partials/content.njk" %}
  </div> #}
</div>